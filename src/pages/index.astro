---
//Layouts
import Layout from '../layouts/Layout.astro';

//Components
import {Image} from 'astro:assets'
import Section from '../components/section/Section.astro';
import MiniSocial from '../components/social/MiniSocial.astro';
import Tecno from '../components/tecnologis/Tecno.astro';

//Var
const pageTitle = "Abel Sturm";
---
<Layout pageTitle={pageTitle}>

  <div class="flex justify-between text-center md:text-left w-full pt-5 pb-20 md:pt-20 md:pb-40 flex-col md:flex-row md:items-center">
    <div class="mb-10 md:mt-auto md:mb-auto">
      <h1 class="my-4 text-4xl md:text-8xl">{pageTitle}</h1>
      <p>¡Hola! Soy Abel Sturm, un desarrollador web de España.</p>
      <MiniSocial platform="linkedin" username="abel-sturm" icon="fa-brands fa-linkedin" />
      <MiniSocial platform="github" username="AbelSturm" icon="fa-brands fa-github" />
    </div>  
    <div class="w-full md:w-1/2 overflow-hidden relative rounded-[30px] md:rounded-tr-none md:rounded-br-none pr-0">
      <Image 
        src="/fondu.png"
        alt="Logo"
        class="w-full h-auto object-cover object-top dark:filter dark:brightness-75"
        width={300}
        height={150}
      />
    </div>
  </div>

  <Section sectionTitle="Sobre mi" class="pt-12 pb-12">
    <div>

    </div>
  </Section>

  <Section sectionTitle="Tecnologias" class="pt-12 pb-12">
    <div class="card grid-cols-2 md:grid-cols-5 grid gap-2 md:pr-36 md:my-8">
      <Tecno name="HTML" icon="fab fa-html5"/>
      <Tecno name="CSS" icon="fab fa-css3-alt"/>
      <Tecno name="Tailwind" icon="fas fa-wind"/>
      <Tecno name="JavaScript" icon="fab fa-js"/>
      <Tecno name="TypeScript" icon="fas fa-code"/>
      <Tecno name="Node.js" icon="fab fa-node-js"/>
      <Tecno name="Angular" icon="fab fa-angular"/>
      <Tecno name="Astro" icon="fas fa-rocket"/>
      <Tecno name="PHP" icon="fa-brands fa-php"/>
      <Tecno name="Git" icon="fab fa-git-alt"/>
      <Tecno name="React" icon="fab fa-react"/>
      <Tecno name="Bootstrap" icon="fab fa-bootstrap"/>

    </div>
  </Section>

</Layout>