---
//Layouts
import Layout from '../layouts/Layout.astro';

//Components
import {Image} from 'astro:assets'
import Section from '../components/section/Section.astro';
import MiniSocial from '../components/social/MiniSocial.astro';
import Tecno from '../components/tecnologis/Tecno.astro';
import SobreMi from '../components/sobremi/SobreMi.astro';
import Hobbie from '../components/hobbies/Hobbie.astro';

//Var
const pageTitle = "Abel Sturm";
---
<Layout pageTitle={pageTitle}>

  <div class="flex justify-between text-center md:text-left w-full pt-5 pb-10 md:pt-20 md:pb-40 flex-col md:flex-row md:items-center">
    <div class="mb-10 md:mt-auto md:mb-auto">
      <h1 class="my-4 text-4xl md:text-8xl">{pageTitle}</h1>
      <p>¡Hola! Soy Abel Sturm, un desarrollador web de España.</p>
      <MiniSocial platform="linkedin" username="abel-sturm" icon="fa-brands fa-linkedin" />
      <MiniSocial platform="github" username="AbelSturm" icon="fa-brands fa-github" />
    </div>  
    <div class="w-full md:w-1/2 overflow-hidden relative rounded-[30px] md:rounded-tr-none md:rounded-br-none pr-0">
      <Image 
        src="/fondu.png"
        alt="Logo"
        class="w-full h-auto object-cover object-top dark:filter dark:brightness-75"
        width={300}
        height={150}
      />
    </div>
  </div>

  <Section sectionTitle="Sobre mi">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 md:pr-36 md:my-4">
      <div class="grid gap-8 md:col-span-1 lg:col-span-2">
        <SobreMi title="Sobre mi" content="Soy un desarrollador web de España. Me encanta aprender cosas nuevas. Actualmente estoy trabajando en proyectos personales y en una buena empresa que dessarolla software."/>
        <SobreMi title="Experiencia" content="He trabajado en varios proyectos, tanto personales como profesionales. He trabajado con tecnologías como HTML, CSS, JavaScript, Node.js, Angular, React, PHP, entre otras."/>
        <SobreMi title="Educación" content="Estudié varios grados de Informatica. También he realizado varios cursos online sobre desarrollo web y tecnologías relacionadas."/>
        </div>
        <div class="grid gap-8">
          <SobreMi title="Hobbies">
            <Hobbie title="Escalada" content="Me encanta escalar. Es un deporte que me ayuda a desconectar."/>
            <Hobbie title="Leer" content="Me encanta leer. Me gusta leer principalmente novelas de fantasía."/>
            <Hobbie title="Música" content="Me gusta escuchar música de todo tipo y tocar el piano."/>
          </SobreMi>
        </div>
    </div>
  </Section>

  <Section sectionTitle="Tecnologias">
    <div class="card grid-cols-2 md:grid-cols-5 grid gap-2 md:pr-36 md:my-4">
      <Tecno name="HTML" icon="fab fa-html5"/>
      <Tecno name="CSS" icon="fab fa-css3-alt"/>
      <Tecno name="Tailwind" icon="fas fa-wind"/>
      <Tecno name="JavaScript" icon="fab fa-js"/>
      <Tecno name="TypeScript" icon="fas fa-code"/>
      <Tecno name="Node.js" icon="fab fa-node-js"/>
      <Tecno name="Angular" icon="fab fa-angular"/>
      <Tecno name="Astro" icon="fas fa-rocket"/>
      <Tecno name="PHP" icon="fa-brands fa-php"/>
      <Tecno name="Git" icon="fab fa-git-alt"/>
      <Tecno name="React" icon="fab fa-react"/>
      <Tecno name="Bootstrap" icon="fab fa-bootstrap"/>

    </div>
  </Section>

</Layout>